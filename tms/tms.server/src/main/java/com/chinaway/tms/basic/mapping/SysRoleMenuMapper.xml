<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chinaway.tms.basic.dao.SysRoleMenuMapper" >
  	<resultMap id="BaseResultMap" type="com.chinaway.tms.basic.model.SysRoleMenu" >
		<result column="
roleid" property="
roleid"/>
		<result column="menuid" property="menuid"/>
	</resultMap>
       
	<sql id="Base_Column_List" >
		 
roleid,menuid
	</sql>
   
	<!-- 动态查询条件 -->
	<sql id="Example_Where_Clause">
	where 1=1
	<trim suffixOverrides="," >
		<if test="
roleid != null and 
roleid != '' ">
		    and 
roleid = #{
roleid}
		</if>
		<if test="menuid != null and menuid != '' ">
		    and menuid = #{menuid}
		</if>
	
	</trim>
	</sql>
 
	<!-- 根据id查询  -->
	<select id="selectById"  resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select <include refid="Base_Column_List" /> 
	 from sys_role_menu where 
roleid = #{
roleid}
	</select>

	<!-- 条件查询所有(分页拦截的也是这个语句) -->
	<select id="selectAll4Page" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_role_menu
		<include refid="Example_Where_Clause"/>
	</select>
   
	<!-- 插入记录 -->
	<insert id="insert" parameterType="com.chinaway.tms.basic.model.SysRoleMenu" >
	  insert into sys_role_menu(
roleid,menuid)
 values(#{
roleid},#{menuid})
	</insert>

	<!-- 根据id，修改记录-->  
	 <update id="update" parameterType="com.chinaway.tms.basic.model.SysRoleMenu" >
	  update sys_role_menu set menuid=#{menuid} where 
roleid=#{
roleid}
	 </update>
 
	 <!-- 动态修改记录，只修改只不为空的字段 -->
	<update id="updateSelective" parameterType="com.chinaway.tms.basic.model.SysRoleMenu" >
		update sys_role_menu set 
	<trim  suffixOverrides="," >
	<if test="menuid != null  ">
		menuid=#{menuid},
	</if>
	</trim> where 
roleid=#{
roleid}
	</update>

	<!-- 删除记录 -->
	<delete id="deleteById" parameterType="com.chinaway.tms.basic.model.SysRoleMenu" >
		delete 	 from sys_role_menu where 
roleid = #{
roleid}
	</delete>
  	
</mapper>
